<form action="/ingredients/edit/{{ingredient._id}}?_method=PUT" method="POST">
    <input type="hidden" name="_method" value="PUT">
    <legend>Edit Ingredient</legend>
    <p>Note: <small>The amounts must be represented <em> in mg out of 100g</em>.</small></p>
    <div class="form-group">
      <label for="exampleInputEmail1" class="form-label mt-4">Ingredient Name</label>
      <input type="text" name="title" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter name" value={{ingredient.title}} >
    </div>
    <div class="form-group">
      <label for="exampleTextarea" class="form-label mt-4">Ingredient Type</label>
      <input type="text" name="tipo" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter type" value={{ingredient.tipo}} >
    </div>
    <div class="form-group">
      <label for="exampleInputEmail1" class="form-label mt-4">Calories</label>
      <input type="number" name="calorias" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter calories" value={{ingredient.calorias}} step="any" min="0">
    </div>
    <div class="form-group">
      <label for="exampleInputEmail1" class="form-label mt-4">Carbohydrates</label>
      <input type="number" name="hdecarbono" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter carbohydrates" value={{ingredient.hdecarbono}} step="any" min="0">
    </div>
    <div class="form-group">
      <label for="exampleInputEmail1" class="form-label mt-4">Fat</label>
      <input type="number" name="grasa" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter fat" value={{ingredient.grasa}} step="any" min="0">
    </div>
    <div class="form-group">
      <label for="exampleInputEmail1" class="form-label mt-4">Protein</label>
      <input type="number" name="proteina" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Protein" value={{ingredient.proteina}} step="any" min="0">
    </div>
    <div class="form-group">
        <button type="number" class="btn btn-primary mt-3">Submit</button>
    </div>
</form>