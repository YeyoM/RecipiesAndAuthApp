<form action="/recipes/new-recipe" method="POST">
  <legend>Add a new Recipe</legend>  
  {{#if ingredients}}
</div>
  <div class="form-group">
    <label for="exampleInputEmail1" class="form-label mt-4">Recipe Title</label>
    <input type="text" name="title" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
      placeholder="Enter name">
  </div>
  {{#each ingredients}}
  <div class="form-group mt-4">
    <h6>{{title}}</h6>
    <ul>
      <li>Type: {{tipo}}</li>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" name="ingredientsId" value={{_id}} id="flexCheckDefault">
        <label class="form-check-label" for="flexCheckDefault">
          Select for the recipe
        </label>
      </div>
    </ul>
  </div>
  {{/each}}
  <div class="form-group">
    <button type="submit" class="btn btn-primary mt-3">Submit</button>
  </div>
  {{else}}
  <h4>Oops!</h4>
  <p class="lead">
    We have not found any ingredients, add a couple <a href="/ingredients/add">here</a> before start adding recipes!
  </p>
  {{/if}}
</form>
