<form action="/recipes/new-recipe/{{animalId}}" method="POST">
  <legend>Agregar una nueva dieta</legend>  
  {{#if ingredients}}
</div>
  <div class="form-group">
    <label for="exampleInputEmail1" class="form-label mt-4">Titulo de la dieta</label>
    <input type="text" name="title" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
      placeholder="Ingresa el título">
  </div>
  <small>Selecciona los ingredientes que conformarán la dieta</small>
  {{#each ingredients}}
  <div class="form-group mt-3">
    <ul>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" name="ingredientsId" value={{_id}} id="flexCheckDefault">
        <label class="form-check-label" for="flexCheckDefault">
          {{title}}
        </label>
        <li>Tipo: {{tipo}}</li>
      </div>
    </ul>
  </div>
  {{/each}}
  <div class="form-group">
    <button type="submit" class="btn btn-primary mt-3">Crear</button>
  </div>
  {{else}}
  <h4>Oops!</h4>
  <p class="lead">
    No encontramos ningun ingrediente, añade algunos <a href="/ingredients/add">aquí</a>!
  </p>
  {{/if}}
</form>