<form action="/recipes/edit/{{recipe._id}}?_method=PUT" method="POST">
  <input type="hidden" name="_method" value="PUT">
  <legend>Edit Recipe</legend>
  <p>Note: <small>The amounts must be represented <em> in mg out of 100g</em>.</small></p>
  <div class="form-group">
    <label for="exampleInputEmail1" class="form-label mt-4">Recipe Name</label>
    <input type="text" name="title" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
      placeholder="Enter name" value={{recipe.title}}>
  </div>
  {{#each ingredients}}
  <div class="form-group mt-4">
    <h6>{{title}}</h6>
    <ul>
      <li>Type: {{tipo}}</li>
      {{#if selected}}
      <div class="form-check">
        <input class="form-check-input" type="checkbox" name="ingredientsId" value={{_id}} id="flexCheckDefault" checked>
        <label class="form-check-label" for="flexCheckDefault">
          Select for the recipe
        </label>
      </div>
      {{else}}
      <div class="form-check">
        <input class="form-check-input" type="checkbox" name="ingredientsId" value={{_id}} id="flexCheckDefault">
        <label class="form-check-label" for="flexCheckDefault">
          Select for the recipe
        </label>
      </div>
      {{/if}}
    </ul>
  </div>
  {{/each}}
  <div class="form-group">
    <button type="submit" class="btn btn-primary mt-3">Submit</button>
  </div>
</form>