<form action="/recipes/editContinue/{{id}}?_method=PUT" method="POST">
    <legend>Select the amount in gr for each ingredient</legend>
    {{#each names}}
    <div class="form-group">
        <label class="col-form-label col-form-label-sm mt-4" for="inputSmall">{{this}}</label>
        <input class="form-control form-control-sm" type="number" placeholder="amount in gr" id="inputSmall" name="ingredientsAmounts">
    </div>
    {{/each}}
    <div class="form-group">
            <button type="submit" class="btn btn-primary mt-3">Submit</button>
        </div>
</form>