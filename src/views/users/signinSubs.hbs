<form action="/users/signin/subscription" method="POST">
    <legend>Log In to select a subscription</legend>
    <div class="form-group">
        <label class="form-label mt-4"></label>
        <div class="form-floating mb-3">
            <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com" name="email">
            <label for="floatingInput">Email address</label>
        </div>
        <div class="form-floating">
            <input type="password" class="form-control" id="floatingPassword" placeholder="Password" name="password">
            <label for="floatingPassword">Password</label>
        </div>
        <p><small>Forgot Password? <a href="#">Click here</a></small></p>
        <div class="d-grid gap-1">
            <button class="btn btn-lg btn-primary">Log In</button>
        </div>
    </div>
</form>