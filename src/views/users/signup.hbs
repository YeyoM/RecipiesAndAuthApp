<form action="/users/signup" method="POST">
    <legend>Register a new account</legend>
    <div class="form-group">
        <label class="form-label mt-4"></label>
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="floatingInput" placeholder="Diego Moreno" name="name" value="{{name}}">
            <label for="floatingInput">Name</label>
        </div>
        <div class="form-floating mb-3">
            <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com" name="email" value="{{email}}">
            <label for="floatingInput">Email address</label>
        </div>
        <p><small>The email must be <em>a valid email, and it will be the same when you proceed to pay in the next step</em>.</small></p>
        <div class="form-floating">
            <input type="password" class="form-control" id="floatingPassword" placeholder="Password" name="password">
            <label for="floatingPassword">Password</label>
        </div>
        <div class="form-floating">
            <input type="password" class="form-control" id="floatingPassword" placeholder="Password" name="confirm_password">
            <label for="floatingPassword">Confirm Password</label>
        </div>
        <p><small>The password must be <em>at least 5 characters long</em>.</small></p>
        <div class="d-grid gap-2">
            <button class="btn btn-lg btn-primary">SignUp</button>
        </div>
    </div>
</form>